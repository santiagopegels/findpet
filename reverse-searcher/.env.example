# ================================
# CONFIGURACIÓN DEL SERVIDOR
# ================================

# API Key para autenticación (CAMBIAR EN PRODUCCIÓN)
API_KEY=your-secure-api-key-here

# Configuración del servidor
HOST=0.0.0.0
PORT=5000
DEBUG=false

# ================================
# CONFIGURACIÓN DEL MODELO ML
# ================================

# Tipo de modelo: 'efficientnet' (recomendado) o 'vgg16' (legacy)
MODEL_TYPE=efficientnet

# Directorio donde se almacenan los modelos
MODEL_PATH=./models/

# ================================
# CONFIGURACIÓN DE IMÁGENES
# ================================

# Tamaño máximo de imagen en bytes (10MB por defecto)
MAX_IMAGE_SIZE=10485760

# Umbral de similitud para búsquedas (0.0 - 1.0)
SIMILARITY_THRESHOLD=0.8

# Número máximo de resultados en búsquedas
MAX_SEARCH_RESULTS=20

# ================================
# CONFIGURACIÓN DE REDIS (OPCIONAL)
# ================================

# Habilitar Redis para caching
REDIS_ENABLED=false

# Configuración de conexión Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ================================
# CONFIGURACIÓN DE LOGGING
# ================================

# Nivel de log: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Formato de log: 'json' o 'text'
LOG_FORMAT=json

# ================================
# CONFIGURACIÓN AVANZADA
# ================================

# Límite de memoria para TensorFlow (opcional)
TF_MEMORY_LIMIT=2048

# Usar CPU forzado para inferencia (recomendado para estabilidad)
TF_FORCE_CPU=true 